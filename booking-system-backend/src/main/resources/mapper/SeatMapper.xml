<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.booking.mapper.SeatMapper">
    <!-- 座位相关SQL映射 -->

    <resultMap id="SeatResultMap" type="com.booking.entity.Seat">
        <id property="seatId" column="seat_id" />
        <result property="tripId" column="trip_id" />
        <result property="seatNumber" column="seat_number" />
        <result property="seatStatus" column="seat_status" />
        <result property="lockExpireTime" column="lock_expire_time" />
        <result property="createTime" column="create_time" />
        <result property="updateTime" column="update_time" />
    </resultMap>

    <insert id="insert" parameterType="com.booking.entity.Seat" useGeneratedKeys="true" keyProperty="seatId">
        INSERT INTO seats(trip_id, seat_number, seat_status, lock_expire_time)
        VALUES(#{tripId}, #{seatNumber}, #{seatStatus}, #{lockExpireTime})
    </insert>

    <update id="update" parameterType="com.booking.entity.Seat">
        UPDATE seats
        SET seat_status = #{seatStatus},
            lock_expire_time = #{lockExpireTime},
            update_time = NOW()
        WHERE seat_id = #{seatId}
    </update>

    <select id="findById" parameterType="int" resultMap="SeatResultMap">
        SELECT * FROM seats WHERE seat_id = #{seatId}
    </select>

    <select id="findByTripId" parameterType="int" resultMap="SeatResultMap">
        SELECT * FROM seats WHERE trip_id = #{tripId}
    </select>

    <select id="findAvailableByTripId" parameterType="int" resultMap="SeatResultMap">
        SELECT * FROM seats WHERE trip_id = #{tripId} AND seat_status = 0
    </select>
    
    <!-- 统计可用座位数量 -->
    <select id="countAvailableSeats" parameterType="int" resultType="int">
        SELECT COUNT(*) FROM seats 
        WHERE trip_id = #{tripId} 
        AND seat_status = 0
    </select>
    
    <!-- 查找一个可用座位（用于自动分配） -->
    <select id="findAvailableSeat" parameterType="int" resultMap="SeatResultMap">
        SELECT * FROM seats 
        WHERE trip_id = #{tripId} 
        AND seat_status = 0 
        ORDER BY seat_number
        LIMIT 1
    </select>
</mapper>
